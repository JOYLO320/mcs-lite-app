// ======================================
// Required: Bootstrap Stylus
// ======================================
@import "~bootstrap-styl/bootstrap/variables"
@import "~bootstrap-styl/bootstrap/mixins"

@import "~bootstrap-styl/bootstrap/normalize"
@import "~bootstrap-styl/bootstrap/print"
@import "~bootstrap-styl/bootstrap/utilities"
@import "~bootstrap-styl/bootstrap/responsive-utilities"

// ======================================
// Required: Style
// ======================================

body
  margin: 0px
  padding: 0px

// ======================================
// Custom
// ======================================

@font-face
  font-family: "RionaSans-Regular"
  src:
    url("../font/med-tek_rionasans-regular-webfont.woff2") format("woff2"),
    url("../font/med-tek_rionasans-regular-webfont.woff") format("woff"),
    url("../font/med-tek_rionasans-regular-webfont.ttf") format("ttf")

@font-face
  font-family: "RionaSans-Medium"
  src:
    url("../font/med-tek_rionasans-medium-webfont.woff2") format("woff2"),
    url("../font/med-tek_rionasans-medium-webfont.woff") format("woff"),
    url("../font/med-tek_rionasans-medium-webfont.ttf") format("ttf")

body
  font-family: RionaSans-Regular, Arial, Helvetica, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body b
  font-family: RionaSans-Medium, Arial, Helvetica, sans-serif
